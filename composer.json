{
    "name": "mapo-89/laravel-homeassistant-api",
    "description": "Laravel package to interact with Home Assistant REST API.",
    "authors": [
        {
            "name": "Manuel Postler",
            "email": "info@postler.de",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/mapo-89/laravel-homeassistant-api",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "guzzlehttp/guzzle": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Mapo89\\LaravelHomeassistantApi\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mapo89\\LaravelHomeassistantApi\\HomeassistantApiServiceProvider"
            ],
            "aliases": {
                "HomeassistantApi": "Mapo89\\LaravelHomeassistantApi\\Facades\\HomeassistantApi"
            }
        }
    }    
}